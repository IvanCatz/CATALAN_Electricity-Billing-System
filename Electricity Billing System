    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            // TODO add your handling code here:
            
            
            txtprint.print();
        } catch (PrinterException ex) {
            Logger.getLogger(ElectricBill.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                        

